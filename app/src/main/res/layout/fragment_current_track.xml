<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CurrentTrackFragment">

    <data>
        <variable
            name="trackListViewModel"
            type="com.example.euterpe.model.TrackListViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{trackListViewModel.currentTrack.title}"
            android:id="@+id/current_track_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/current_track_title"
            app:layout_constraintStart_toEndOf="@id/current_track_title"
            android:text="@{trackListViewModel.currentTrack.artist}"
            android:id="@+id/current_track_artist" />

    </LinearLayout>
</layout>
